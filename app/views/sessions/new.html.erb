<div class="login-box">
  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= render partial: 'form' %>

  <p>You can also log in with Twitter or Google.</p>
  <%= link_to 'Log in with Twitter', '/auth/twitter', class:'button u-full-width' %>
  <%= link_to 'Log in with Google', '/auth/google', class:'button u-full-width' %>
</div>
