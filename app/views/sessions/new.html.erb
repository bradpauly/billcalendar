<div class="login-box">
  <%= form_for @login_form, url: login_path do |form| %>
    <%= form.label :email %>
    <%= form.text_field :email, class: "u-full-width" %>

    <%= form.label :password %>
    <%= form.password_field :password, class: "u-full-width" %>

    <%= form.label :remember_me do %>
      <%= form.check_box :remember_me %>
      <span class="label-body">
        <%= t('helpers.label.login_form.remember_me') %>
      </span>
    <% end %>

    <% if flash[:notice] %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form.submit class: "button-primary u-full-width" %>
  <% end %>
</div>
